    <!--  开启自动化注入  -->
    <context:annotation-config/>

    <!--  创建bean  -->
    <bean name="accountService" class="com.tornado4651.spring.ioc.service.AccountService"/>
    <bean name="accountDao" class="com.tornado4651.spring.ioc.dao.AccountDao"/>
